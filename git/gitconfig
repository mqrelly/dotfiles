[alias]
    l = log --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    ld = log --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset) %C(bold green)(%ad)%C(reset)'
    lg = !git l --graph
    ldg = !git ld --graph
    ci = commit
    comma = commit -a -m
    st = status --short --branch
    br = branch
    bra = branch --all
    co = checkout
    sm = submodule
    puffo = pull --ff-only --prune
