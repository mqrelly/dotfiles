[alias]
    l = log --abbrev-commit --decorate --date=relative --format=tformat:'%C(blue)%h%C(reset) %s %C(dim red)- %an%C(reset)%C(yellow)%d%C(reset)'
    ld = log --abbrev-commit --decorate --date=relative --format=tformat:'%C(blue)%h%C(reset) %s %C(dim red)- %an%C(reset)%C(yellow)%d%C(reset) %C(cyan)(%ad)%C(reset)'
    lg = !git l --graph
    ldg = !git ld --graph
    ci = commit
    comma = commit -a -m
    st = status --short --branch
    br = branch
    bra = branch --all
    co = checkout
    sm = submodule
    puffo = pull --ff-only --prune
    my = !git l master..@
[core]
    editor = nvim
[color]
	ui = auto
